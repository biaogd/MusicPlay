<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RankFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_left_64"
                android:id="@+id/back_search_btn"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:background="@color/touming"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rank_name_tv"
                android:layout_weight="30"
                android:textColor="@color/color1"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="热歌榜"
                android:textSize="18sp"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_left_64"
                android:visibility="invisible"
                android:id="@+id/back_search_btns"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:background="@color/touming"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@color/gray"
                    android:id="@+id/rank_list_view"
                    android:dividerHeight="0.5dp">
                </ListView>
                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:visibility="gone"
                    android:id="@+id/loading"
                    android:indeterminateBehavior="repeat"
                    android:indeterminateDrawable="@drawable/anim"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:layout_centerInParent="true"
                    android:text="无法连接到服务器..."
                    android:id="@+id/err_tv"
                    android:visibility="gone"
                    />
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>


</FrameLayout>